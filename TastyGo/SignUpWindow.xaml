<Window x:Class="TastyGo.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/SignUp_UI.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="31,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="30" FontSize="24" FontWeight="Bold"><Run Text="Enter Your Name&amp;Surname"/><Run Language="tr-tr" Text=":"/></TextBlock>
        <TextBox x:Name="FullNameTextBox" HorizontalAlignment="Left" Margin="362,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="18" BorderBrush="#FF020202" BorderThickness="1.5,1.5,1.5,1.5">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="10">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" FontSize="18" BorderBrush="Black" BorderThickness="1.5,1.5,1.5,1.5" Margin="365,171,0,0">
            <PasswordBox.Template>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="10">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </PasswordBox.Template>
        </PasswordBox>
        <TextBlock HorizontalAlignment="Left" Margin="31,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="242" FontSize="24" FontWeight="Bold"><Run Text="Enter Your Password"/><Run Language="tr-tr" Text=":"/></TextBlock>
        <Button Content="Register" HorizontalAlignment="Center" Margin="0,462,0,0" VerticalAlignment="Top" Width="110" Click="RegisterButton" BorderBrush="Black" Background="White" BorderThickness="1.5,1.5,1.5,1.5" Height="30" FontSize="18" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="PhoneNumberTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="18" BorderBrush="#FF020202" BorderThickness="1.5,1.5,1.5,1.5" Margin="365,264,0,0">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="10">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" Margin="31,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="309" FontSize="24" FontWeight="Bold"><Run Text="Enter Your Phone Number"/><Run Language="tr-tr" Text=":"/><LineBreak/><Run Text="             (Optional)"/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run Text="O"/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="31,366,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="222" FontSize="24" FontWeight="Bold"><Run Text="Enter Your Address"/><Run Language="tr-tr" Text=":"/><LineBreak/><Run Text="        (Optional)"/></TextBlock>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="18" BorderBrush="#FF020202" BorderThickness="1.5,1.5,1.5,1.5" Margin="365,373,0,0">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="10">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
    </Grid>
</Window>
