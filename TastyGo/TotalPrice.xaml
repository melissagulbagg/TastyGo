<Window x:Class="TastyGo.TotalPrice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TastyGo"
        mc:Ignorable="d"
               Title="TotalPrice" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="188" FontSize="36" FontWeight="Bold" TextAlignment="Center"><Run Language="tr-tr" Text="Total Price"/></TextBlock>
        <TextBlock x:Name="TotalPriceTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="188" TextAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,150,0,0"/>
        <Button Content="Order" HorizontalAlignment="Left" Margin="110,232,0,0" VerticalAlignment="Top" Background="#FF9D0909" Style="{StaticResource RoundedButton}" Width="184" BorderThickness="2,2,2,2" BorderBrush="Black" Height="70" Click="OrderButton" FontSize="24" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
